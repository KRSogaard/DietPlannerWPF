<UserControl x:Class="DietPlanner.Windows.Plan.PlanDay"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:plan="clr-namespace:DietPlanner.Windows.Plan"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="1000">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="250" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition />
        </Grid.RowDefinitions>

        <ItemsControl Grid.Column="0" ItemsSource="{Binding Meals}">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <plan:PlanMeal />
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>

        <StackPanel Grid.Column="1" >
            <Expander Header="Nutrition" IsExpanded="True">
                <StackPanel>
                    <TextBlock Text="Meals: " />
                    <TextBlock Text="{Binding MealCount}" />
                </StackPanel>
            </Expander>
            <Expander Header="Rules" IsExpanded="True">

            </Expander>
        </StackPanel>
    </Grid>
</UserControl>
